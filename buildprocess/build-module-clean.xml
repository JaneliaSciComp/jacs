<project name="build-module-clean">

    <!-- Import all the generic module targets -->
    <import file="../buildprocess/build-module-init.xml"/>

	<!-- Whacks the build directory -->
	<target name="clean-build" depends="setup" if="build.dir.exists">
		<delete includeemptydirs="true" verbose="true" failonerror="false">
			<fileset dir="${build.dir}" includes="**"/>
		</delete>
	</target>

	<!-- Cleans up all built stuff -->
	<target name="clean" depends="clean-build" description="cleans build artifacts from this module"/>

	<target name="clean-reports" depends="setup">
		<delete includeemptydirs="true" verbose="true" failonerror="false">
			<fileset dir="${test.reports.dir}" includes="**"/>
		</delete>
	</target>
</project>
