<project name="build-module-clean">

    <import file="../buildprocess/build-module-init.xml"/>

    <target name="clean"
            description="removes all build artifacts (including test reports) for this module"
            depends="setup"
            if="build.dir.exists">

        <delete includeemptydirs="true" verbose="true" quiet="true">
            <fileset dir="${build.dir}" includes="**"/>
        </delete>

    </target>

    <target name="clean-reports"
            description="removes test report artifacts from this module"
            depends="setup"
            if="test.reports.dir.exists">

        <delete includeemptydirs="true" verbose="true" quiet="true">
            <fileset dir="${test.reports.dir}" includes="**"/>
        </delete>

    </target>

</project>
