<process name="TestBlast">  <!-- Executed by ProcessLauncher Pojo -->
    <sequence name="blastLauncher" startEvent="pending" processor="queue/blastLauncher" >
        <operation name="Create Blast Result File Node" processor="org.jcvi.vics.compute.service.blast.persist.results.initial.CreateBlastResultFileNodeService">
            <output name="RESULT_FILE_NODE_ID"/>
            <output name="RESULT_FILE_NODE_DIR" />
        </operation>
        <operation name="Create Fasta Input"  processor="org.jcvi.vics.compute.service.blast.fastasplit.BlastMultiFastaSplitterService"/>
        <operation name="Create Output Directories" processor="org.jcvi.vics.compute.service.blast.submit.CreateBlastOutputDirsService">
            <input name="RESULT_FILE_NODE_ID"/>
            <output name="BLAST_QUERY_OUTPUT_FILE_MAP"/>
            <output name="BLAST_DEST_OUTPUT_DIR"/>
            <output name="BLAST_QUERY_FILES"/>
        </operation>

        <!--<operation name="Submit Job" startEvent="running"  processor="org.jcvi.vics.compute.service.blast.submit.BlastSubmitJobService">
            <input name="BLAST_QUERY_OUTPUT_FILE_MAP"/>
        </operation>-->

        <!-- NOTE: async can be set to "true" here to cause the merge to run in parallel, but that can take resources away from blast -->
        <operation name="Submit Job" startEvent="running"  processor="org.jcvi.vics.compute.service.blast.submit.BlastSubmitJobService">
            <input name="RESULT_FILE_NODE_ID"/>
            <input name="BLAST_QUERY_OUTPUT_FILE_MAP"/>
            <input name="BLAST_DEST_OUTPUT_DIR"/>
            <input name="BLAST_QUERY_FILES"/>
        </operation>

        <!--<operation name="Merge Sort Results" startEvent="postprocess" forEach="BLAST_DEST_OUTPUT_DIR" processor="org.jcvi.vics.compute.service.blast.merge.MergeSortResultsService">
            <output name="TOTAL_BLAST_HITS"/>
        </operation>-->

        <!--<sequence name="Merge Sort" startEvent="postprocess" waitForAsync="true" forEach="BLAST_DEST_OUTPUT_DIR">-->
            <!--<operation name="Merge Sort Results" async="true" processor="org.jcvi.vics.compute.service.blast.merge.MergeSortResultsService">-->
                <!--<input name="RESULT_FILE_NODE_ID" />-->
                <!--<input name="BLAST_NUMBER_OF_HITS_TO_KEEP"/>-->
                <!--<input name="BLAST_DEST_OUTPUT_DIR" />-->
                <!--<output name="TOTAL_BLAST_HITS"/>-->
            <!--</operation>-->
        <!--</sequence>-->

        <!--<sequence name="Merge Sort Results Sequence Wrapper" startEvent="postprocess" waitForAsync="true" forEach="BLAST_DEST_OUTPUT_DIR">
            <operation name="Merge Sort Results" async="true" processor="org.jcvi.vics.compute.service.blast.merge.GridMergeSortResultsService">
                <input name="RESULT_FILE_NODE_ID"/>
                <input name="BLAST_QUERY_OUTPUT_FILE_MAP"/>
                <input name="BLAST_DEST_OUTPUT_DIR"/>
                <input name="BLAST_QUERY_FILES"/>
                <output name="TOTAL_BLAST_HITS"/>
            </operation>
        </sequence>-->

        <operation name="Merge Sort Results" processor="org.jcvi.vics.compute.service.blast.merge.GridMergeSortResultsService">
                <input name="RESULT_FILE_NODE_ID"/>
                <input name="BLAST_QUERY_OUTPUT_FILE_MAP"/>
                <input name="BLAST_DEST_OUTPUT_DIR"/>
                <input name="BLAST_QUERY_FILES"/>
                <output name="TOTAL_BLAST_HITS"/>
        </operation>

        <operation name="Persist Blast Node Results" if="TOTAL_BLAST_HITS&lt;=500" processor="org.jcvi.vics.compute.service.blast.persist.results.finall.PersistFinalNodeResultsService" updateProcessStatus="on_success"/>
        <!--<operation name="Persist Blast XML Results" if="TOTAL_BLAST_HITS&gt;500" processor="org.jcvi.vics.compute.service.blast.persist.results.finall.PersistFinalXMLResultsService"/>-->
        <operation name="Persist Blast XML Results" if="TOTAL_BLAST_HITS&gt;500" processor="org.jcvi.vics.compute.service.blast.persist.results.finall.PersistFinalXMLResultsGridService"/>
        <operation name="Zip Blast Results" if="TOTAL_BLAST_HITS&gt;500" processor="org.jcvi.vics.compute.service.common.zip.ZipService"  updateProcessStatus="on_success">
            <input name="mode" value="compress" />
            <input name="sourceDir" value="$V{RESULT_FILE_NODE_DIR}" />
            <input name="sourceFilePattern" value="blastResults.xml" />
            <input name="zipFileDestDir" value="$V{RESULT_FILE_NODE_DIR}" />
            <input name="zipFileName" value="blastResults.zip" />
        </operation>
        <!--<operation name="Delete Output Dirs" processor="org.jcvi.vics.compute.service.common.file.FileService" async="true" haltOnError="false" updateProcessStatus="never">
              <input name="mode" value="delete" />
              <input name="sourceDir" value="$V{RESULT_FILE_NODE_DIR}" />
              <input name="sourceFilePattern" value="r_[\w\.]*" />
              <input name="RESULT_FILE_NODE_DIR" />
        </operation>-->
    </sequence>
</process>