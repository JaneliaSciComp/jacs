<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mbean PUBLIC
        "-//JBoss//DTD JBOSS XMBEAN 1.0//EN"
        "http://www.jboss.org/j2ee/dtd/jboss_xmbean_1_0.dtd">
<mbean>

    <description>Pattern Search Management Bean</description>
    <class>org.janelia.it.jacs.compute.mbean.PatternSearch</class>
    <constructor>
        <description>The default constructor</description>
        <name>PatternSearch</name>
    </constructor>

    <operation>
        <description>Change the name of the Pattern Annotation Folder</description>
        <name>changePatternAnnotationFolderName</name>
    </operation>

    <operation>
        <description>Move the Compartments folder under the Mask Folder</description>
        <name>moveCompartmentsFolderUnderMaskFolder</name>
    </operation>

    <operation>
        <description>Change the name of Mask Folder to Pattern Annotation</description>
        <name>changeMaskFolderName</name>
    </operation>

    <operation>

        <description>Compartment Annotation Service for 3D Stacks</description>

        <name>runCompartmentAnnotation3DService</name>

        <parameter>
            <description>User Name</description>
            <name>user</name>
            <type>java.lang.String</type>
        </parameter>

        <parameter>
            <description>Configuration Name</description>
            <name>configurationName</name>
            <type>java.lang.String</type>
        </parameter>

        <parameter>
            <description>Folder Name</description>
            <name>folderName</name>
            <type>java.lang.String</type>
        </parameter>

        <parameter>
            <description>Input Stack List Filepath</description>
            <name>inputStackListFilePath</name>
            <type>java.lang.String</type>
        </parameter>

    </operation>

</mbean>
