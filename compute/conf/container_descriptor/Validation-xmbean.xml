<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mbean PUBLIC
          "-//JBoss//DTD JBOSS XMBEAN 1.0//EN"
          "http://www.jboss.org/j2ee/dtd/jboss_xmbean_1_0.dtd">
<mbean>

    <description>Subject Management Bean</description>
    <class>org.janelia.it.jacs.compute.mbean.Validator</class>
    <constructor>
        <description>The default constructor</description>
        <name>Validator</name>
    </constructor>

    <operation>
        <description>Run whatever set of validations is yet established.</description>
        <name>runValidations</name>
        <parameter>
           <description>User who is running validations (e.g. "fosterl")</description>
           <name>user</name>
           <type>java.lang.String</type>
        </parameter>
        <parameter>
            <description>Optional Dataset Name</description>
            <name>dataset</name>
            <type>java.lang.String</type>
        </parameter>
        <parameter>
            <description>Optional Sample ID</description>
            <name>sample</name>
            <type>java.lang.String</type>
        </parameter>
    </operation>

</mbean>
