<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mbean PUBLIC
          "-//JBoss//DTD JBOSS XMBEAN 1.0//EN"
          "http://www.jboss.org/j2ee/dtd/jboss_xmbean_1_0.dtd">
<mbean>

    <description>Entity Validation Bean</description>
    <class>org.janelia.it.jacs.compute.mbean.Validator</class>
    <constructor>
        <description>The default constructor</description>
        <name>Validator</name>
    </constructor>

    <operation>
        <description>Run whatever set of validations is yet established.</description>
        <name>runValidations</name>
        <parameter>
           <description>User who is running validations (e.g. "fosterl")</description>
           <name>user</name>
           <type>java.lang.String</type>
        </parameter>
        <parameter>
            <description>Starting GUID (any starting point for traversal)</description>
            <name>guid</name>
            <type>java.lang.Long</type>
        </parameter>
        <parameter>
            <description>Description of this run.  Part of directory hierarchy.</description>
            <name>label</name>
            <type>java.lang.String</type>
        </parameter>
        <parameter>
            <description>Comma-separated list of EntityTypeNames to be validated</description>
            <name>types</name>
            <type>java.lang.String</type>
        </parameter>
        <parameter>
            <description>Omit Debug Info</description>
            <name>nodebug</name>
            <type>java.lang.Boolean</type>
        </parameter>
    </operation>

</mbean>
