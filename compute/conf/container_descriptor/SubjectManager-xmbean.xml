<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mbean PUBLIC
          "-//JBoss//DTD JBOSS XMBEAN 1.0//EN"
          "http://www.jboss.org/j2ee/dtd/jboss_xmbean_1_0.dtd">
<mbean>

    <description>Subject Management Bean</description>
    <class>org.janelia.it.jacs.compute.mbean.SubjectManager</class>
    <constructor>
        <description>The default constructor</description>
        <name>SubjectManager</name>
    </constructor>

    <operation>
        <description>Create the user with the given name, if it does not already exist.</description>
        <name>createUser</name>
        <parameter>
           <description>User name (e.g. "saffordt")</description>
           <name>username</name>
           <type>java.lang.String</type>
        </parameter>
    </operation>
    
    <operation>
        <description>Create the group with the given name, if it does not already exist.</description>
        <name>createGroup</name>
        <parameter>
           <description>User who should own the group (e.g. "saffordt")</description>
           <name>ownerNameOrKey</name>
           <type>java.lang.String</type>
        </parameter>
        <parameter>
           <description>Group name (e.g. "leetlab")</description>
           <name>groupNameOrKey</name>
           <type>java.lang.String</type>
        </parameter>
    </operation>
    
    <operation>
        <description>Remove the group with the given name.</description>
        <name>removeGroup</name>
        <parameter>
           <description>Group name (e.g. "leetlab")</description>
           <name>groupNameOrKey</name>
           <type>java.lang.String</type>
        </parameter>
    </operation>
    
    <operation>
        <description>Add the given user to the given group, if they are not already part of it.</description>
        <name>addUserToGroup</name>
        <parameter>
           <description>User to add (e.g. "saffordt")</description>
           <name>userNameOrKey</name>
           <type>java.lang.String</type>
        </parameter>
        <parameter>
           <description>Group name (e.g. "leetlab")</description>
           <name>groupNameOrKey</name>
           <type>java.lang.String</type>
        </parameter>
    </operation>
    
    <operation>
        <description>Remove the given user from the given group.</description>
        <name>removeUserFromGroup</name>
        <parameter>
           <description>User to remove (e.g. "saffordt")</description>
           <name>userNameOrKey</name>
           <type>java.lang.String</type>
        </parameter>
        <parameter>
           <description>Group name (e.g. "leetlab")</description>
           <name>groupNameOrKey</name>
           <type>java.lang.String</type>
        </parameter>
    </operation>
    
    <operation>
        <description>Delete the current workspace for a user and recreate it using common root information.</description>
        <name>recreateWorkspace</name>
        <parameter>
           <description>Subject key for user to recreate workspace for (e.g. "user:saffordt")</description>
           <name>subjectNameOrKey</name>
           <type>java.lang.String</type>
        </parameter>
    </operation>
    
</mbean>
