<?xml version="1.0" encoding="UTF-8"?> <!DOCTYPE server>
<server>
	<mbean code="com.mchange.v2.c3p0.jboss.C3P0PooledDataSource"
		name="jboss:service=C3P0PooledDataSource">
		<attribute name="JndiName">ComputeServer_DataSource</attribute>
		<attribute name="JdbcUrl">jdbc:mysql://val-db:3306/flyportal</attribute>
		<attribute name="DriverClass">com.mysql.jdbc.Driver</attribute>
		<attribute name="User">flyportalApp</attribute>
		<attribute name="Password">flyportalApp@val</attribute> 
		
		<!-- test all connections every 10 minutes -->
		<attribute name="IdleConnectionTestPeriod">600</attribute> 
		
		<!--  pool size -->
		<attribute name="InitialPoolSize">5</attribute> 
		<attribute name="MaxPoolSize">500</attribute>
		
