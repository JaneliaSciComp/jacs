<!--  Datasource config for Oracle originally from Steven Coy             -->
<!-- ==================================================================== -->
 

<datasources>
 
 <local-tx-datasource>
     <jndi-name>ComputeServer_DataSource</jndi-name>
     <connection-url>jdbc:postgresql://your_dbhost:5432/your_db</connection-url>
     <driver-class>org.postgresql.Driver</driver-class>
     <user-name>your_dbuser</user-name>
     <password>your_dbpassword</password>
     <!--pooling parameters-->
     <min-pool-size>5</min-pool-size>
     <max-pool-size>120</max-pool-size>
     <idle-timeout-minutes>6</idle-timeout-minutes>  </local-tx-datasource>
 
</datasources>


