<process name="PsiBlast"  startEvent="pending" updateProcessStatus="on_success" processor="queue/psiBlastLauncher" >
    <sequence name="psiBlastLauncher">
        <operation name="Create Psi Blast Result Node" processor="org.jcvi.vics.compute.service.psiBlast.PsiBlastCreateResultNodeService">
            <output name="RESULT_FILE_NODE_ID"/>
            <output name="RESULT_FILE_NODE"/>
        </operation>
        <operation name="Create Fasta Input"  processor="org.jcvi.vics.compute.service.blast.fastasplit.BlastMultiFastaSplitterService">
            <input name="RESULT_FILE_NODE_ID"/>
        </operation>
        <operation name="Create Output Directories" processor="org.jcvi.vics.compute.service.blast.submit.CreateBlastOutputDirsService">
            <input name="RESULT_FILE_NODE_ID"/>
            <output name="BLAST_QUERY_OUTPUT_FILE_MAP"/>
            <output name="BLAST_DEST_OUTPUT_DIR"/>
            <output name="BLAST_QUERY_FILES"/>
        </operation>
        <sequence name="PsiBlast Submit Job" waitForAsync="true">
            <operation name="Submit Job" processor="queue/gridSubmitAndWait">
                <input name="iservice" value="org.jcvi.vics.compute.service.blast.submit.BlastSubmitJobService"/>
                <input name="RESULT_FILE_NODE_ID"/>
                <input name="BLAST_QUERY_OUTPUT_FILE_MAP"/>
                <input name="BLAST_DEST_OUTPUT_DIR"/>
                <input name="BLAST_QUERY_FILES"/>
                <input name="SKIP_LOCAL_MERGE_SORT" value="true"/>
            </operation>
        </sequence>
        <!--<operation name="Merge Results" startEvent="postprocess" processor="org.jcvi.vics.compute.service.psiBlast.PsiBlastMergeService">-->
            <!--<input name="POST_SPLIT_INPUT_FILE_LIST"/>-->
            <!--<input name="INPUT_OUTPUT_FILE_LIST_MAP"/>-->
            <!--<input name="RESULT_FILE_NODE"/>-->
        <!--</operation>-->
    </sequence>
</process>