<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping schema="flyportal"
                   package="org.janelia.it.jacs.model.user_data"
                   default-access="property"
                   default-lazy="false"
                   auto-import="true"
                   default-cascade="none"
                  >
    <class name="org.janelia.it.jacs.model.user_data.User" table="user_accounts"
           lazy="true">

        <id name="userId" access="field" column="user_id" type="java.lang.Long">
            <generator class="org.janelia.it.jacs.model.TimebasedIdentifierGenerator" />
        </id>

        <property name="userLogin" unique="true" not-null="true"
            column="user_login" type="string"/>

        <property name="fullName" type="string"/>

        <property name="email" type="string"/>

        <set name="nodes" cascade="all" inverse="true" lazy="true">
            <key foreign-key="node_fk_user">
               <column name="user_id" index="node_fk_user"/>
            </key>
            <one-to-many class="Node" />
        </set>

        <set name="tasks" cascade="all" lazy="true">
            <key foreign-key="task_fk_user">
                <column name="user_id" index="task_fk_user"/>
            </key>                 
            <one-to-many class="org.janelia.it.jacs.model.tasks.Task" />
        </set>

        <map
            name="preferenceMap" table="user_preference_map" schema="flyportal"
            lazy="false" inverse="false" cascade="all" sort="unsorted">
            <key column="user_id"/>
            <index column="category_and_name" type="string"/>
            <composite-element class="org.janelia.it.jacs.model.user_data.prefs.UserPreference">
                <property name="name" type="string"/>
                <property name="category" type="string"/>
                <property name="value" type="string"/>
            </composite-element>
        </map>

    </class>

</hibernate-mapping>