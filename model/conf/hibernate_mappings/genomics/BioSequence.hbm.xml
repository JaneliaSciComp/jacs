<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.janelia.it.jacs.model.genomics"
                   default-access="property"
                   default-lazy="false"
                   auto-import="true"
                   default-cascade="none"
                   >

    <class name="BioSequence" table="bio_sequence" lazy="true" discriminator-value="0">

        <id name="sequenceId" type="java.lang.Long" column="sequence_id">
            <generator class="org.janelia.it.jacs.model.TimebasedIdentifierGenerator" />
        </id>
        <discriminator column="sequence_type_code" type="java.lang.Integer"/>
        <many-to-one name="sequenceType" class="SequenceType"
                     column="sequence_type_code" not-null="true" insert="false" update="false"/>
        <property name="sequence" type="java.lang.String">
            <column name="sequence" sql-type="text" not-null="true"/>
        </property>
        <property name="sourceId" column="source_id" type="java.lang.Integer" not-null="true" unique="false"/>

        <subclass name="AASequence" discriminator-value="1" lazy="true"/>
        <subclass name="NASequence" discriminator-value="2" lazy="true"/>

    </class>

</hibernate-mapping>
