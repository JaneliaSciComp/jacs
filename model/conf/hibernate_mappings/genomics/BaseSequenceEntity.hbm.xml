<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.janelia.it.jacs.model.genomics"
                   default-access="property"
                   default-lazy="false"
                   auto-import="true"
                   default-cascade="none"
                  >

    <class name="BaseSequenceEntity" table="sequence_entity" lazy="true" discriminator-value="-1">
<!--
        internal id, discriminator, ownership
-->
        <id name="entityId" column="entity_id">
            <generator class="org.janelia.it.jacs.model.TimebasedIdentifierGenerator" />
        </id>
        <discriminator column="entity_type_code" type="java.lang.Integer"/>
        <many-to-one name="entityType" class="org.janelia.it.jacs.model.genomics.EntityTypeGenomic" column="entity_type_code" cascade="none" lazy="proxy"
            insert="false" update="false"/>
        <many-to-one name="owner" class="org.janelia.it.jacs.model.user_data.User" lazy="proxy" cascade="none" column="owner_id"/>
        <property name="sourceId" column="source_id" type="java.lang.Integer" not-null="true" unique="false"/>
        <property name="obsFlag" column="obs_flag" type="java.lang.Boolean" not-null="true" unique="false"/>
        <property name="replacedBy" type="string" column="replaced_by" />
<!--
        basic data from fasta file
-->
        <property name="accession" type="java.lang.String" column="accession" not-null="true" unique="true"/>
        <property name="defline" type="java.lang.String" column="defline"/>
        <many-to-one name="bioSequence" class="BioSequence" lazy="proxy" fetch="select" cascade="all" column="sequence_id"/>
        <property name="sequenceLength" type="java.lang.Integer" column="sequence_length"/>
<!--
        general details from defline
-->
        <property name="externalSource" type="string" column="external_source"/>
        <property name="externalAcc" type="string" column="external_acc"/>
        <property name="ncbiGINumber" type="java.lang.Integer" column="ncbi_gi_number"/>
<!--
        genomic context
-->
        <property name="organism" type="string" column="organism"/>
        <property name="taxonId" type="java.lang.Integer" column="taxon_id"/>
        <property name="assemblyAcc" type="string" column="assembly_acc"/>
        <many-to-one class="Assembly" name="assembly" lazy="proxy" column="assembly_id" />
        <property type="string" name="sampleAcc" column="sample_acc" />
        <many-to-one class="org.janelia.it.jacs.model.metadata.Sample" name="sample" lazy="proxy" column="sample_id"/>
        <property name="libraryAcc" type="string" column="library_acc"/>
        <many-to-one name="library" class="org.janelia.it.jacs.model.metadata.Library" lazy="proxy" column="library_id"/>
<!--
        detailed subclasses
-->
        <subclass name="Nucleotide" discriminator-value="0" lazy="true">
            <subclass name="Chromosome" discriminator-value="1" lazy="true">
                <property name="type" type="string" column="type"/>
            </subclass>
            <subclass name="Scaffold" discriminator-value="2" lazy="true">
            </subclass>
            <subclass name="Read" discriminator-value="3" lazy="true">
                <property name="traceAcc" type="string" column="trace_acc"/>
                <property name="templateAcc" type="string" column="template_acc"/>
                <property name="sequencingDirection" type="string" column="sequencing_direction"/>
                <property name="clearRangeBegin" type="java.lang.Integer" column="clear_range_begin"/>
                <property name="clearRangeEnd" type="java.lang.Integer" column="clear_range_end"/>
                <set name="mates" table="read_mate" lazy="false" cascade="none">
                    <key column="read_id"/>
                    <many-to-many class="Read" column="mate_id"/>
                </set>
            </subclass>
            <subclass name="ORF" discriminator-value="5" lazy="true">
                <property type="string" name="proteinAcc" column="protein_acc"/>
                <many-to-one class="Protein" name="proteinEntity" lazy="proxy" column="protein_id"/>
                <property type="string" name="dnaAcc" column="dna_acc" />
                <many-to-one class="Nucleotide" name="dnaEntity" lazy="proxy" column="dna_id"/>
                <property type="java.lang.Integer" name="dnaBegin" column="dna_begin"/>
                <property type="java.lang.Integer" name="dnaEnd" column="dna_end"/>
                <property type="java.lang.Integer" name="dnaOrientation" column="dna_orientation"/>
                <property type="string" name="translationTable" column="translation_table" />
                <property type="string" name="stop5Prime" column="stop_5_prime"/>
                <property type="string" name="stop3Prime" column="stop_3_prime"/>
            </subclass>
            <subclass name="NonCodingRNA" discriminator-value="8" lazy="true">
                <property name="type" type="string" column="type"/>
                <property type="string" name="dnaAcc" column="dna_acc" />
                <many-to-one class="Nucleotide" name="dnaEntity" lazy="proxy" column="dna_id"/>
                <property type="java.lang.Integer" name="dnaBegin" column="dna_begin"/>
                <property type="java.lang.Integer" name="dnaEnd" column="dna_end"/>
                <property type="java.lang.Integer" name="dnaOrientation" column="dna_orientation"/>
            </subclass>
        </subclass>

        <subclass name="Peptide" discriminator-value="7" lazy="true">
            <subclass name="Protein" discriminator-value="6" lazy="true">
                <property type="string" name="orfAcc" column="orf_acc"/>
                <many-to-one class="ORF" name="orfEntity" lazy="proxy" column="orf_id"/>
                <property type="string" name="dnaAcc" column="dna_acc" />
                <many-to-one class="Nucleotide" name="dnaEntity" lazy="proxy" column="dna_id"/>
                <property type="java.lang.Integer" name="dnaBegin" column="dna_begin"/>
                <property type="java.lang.Integer" name="dnaEnd" column="dna_end"/>
                <property type="java.lang.Integer" name="dnaOrientation" column="dna_orientation"/>
                <property type="string" name="translationTable" column="translation_table" />
                <property type="string" name="stop5Prime" column="stop_5_prime"/>
                <property type="string" name="stop3Prime" column="stop_3_prime"/>
            </subclass>
        </subclass>

    </class>

</hibernate-mapping>
