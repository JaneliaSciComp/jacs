<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.janelia.it.jacs.model.genomics"
                   default-access="property"
                   default-lazy="false"
                   auto-import="true"
                   default-cascade="none">
    <class name="ScaffoldReadAlignment" lazy="true" table="read_assembly">
        <composite-id>
            <key-property name="scaffoldAcc" type="java.lang.String" column="scaffold_acc"/>
            <key-property name="readAcc" type="java.lang.String" column="read_acc"/>
        </composite-id>
        <many-to-one name="scaffold" class="Scaffold" cascade="save-update"
                     column="scaffold_acc" property-ref="accession" not-found="ignore"
                     insert="false" update="false"/>
        <many-to-one name="read" class="Read" cascade="save-update"
                     column="read_acc" property-ref="accession" not-found="ignore"
                     insert="false" update="false"/>
        <property name="scaffoldBegin" type="java.lang.Integer" column="scaf_begin"/>
        <property name="scaffoldEnd" type="java.lang.Integer" column="scaf_end"/>
        <property name="scaffoldOrientation" type="java.lang.Integer" column="scaf_orientation"/>
        <property name="scaffoldLength" type="java.lang.Integer" column="scaffold_length"/>
        <property name="assemblyDescription" type="java.lang.String" column="assembly_description"/>
    </class>
</hibernate-mapping>
