<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.janelia.it.jacs.model.genomics"
                   default-access="property"
                   default-lazy="false"
                   auto-import="true"
                   default-cascade="all"
                  >

    <class name="Library" lazy="false" table="library" >
        <id name="libraryId" type="java.lang.Long" column="library_id" >
            <generator class="org.janelia.it.jacs.model.TimebasedIdentifierGenerator" />
        </id>
        <property name="libraryAcc" type="java.lang.String" column="library_acc" unique="true" />
        <property name="maxInsertSize" type="java.lang.Integer" column="max_insert_size" />
        <property name="minInsertSize" type="java.lang.Integer" column="min_insert_size" />
        <property name="numberOfReads" type="java.lang.Integer" column="number_of_reads" not-null="true" />
        <property name="sequencingTechnology" type="java.lang.String" column="sequencing_technology" />
        <set name="reads" inverse="true" lazy="true">
            <key column="library_id"/>
            <one-to-many class="org.janelia.it.jacs.model.genomics.Read"/>
        </set>
        <property type="string" name="sampleAcc" column="sample_acc" />
        <many-to-one class="org.janelia.it.jacs.model.genomics.Sample" name="sample" lazy="proxy"
                     column="sample_acc" property-ref="sampleAcc" insert="false" update="false"/>
    </class>

</hibernate-mapping>
