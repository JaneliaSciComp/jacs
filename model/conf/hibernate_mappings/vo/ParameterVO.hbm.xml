<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.janelia.it.jacs.model.vo"
                   default-access="property"
                   default-lazy="false"
                   auto-import="true"
                   default-cascade="none"
                  >

    <class name="ParameterVO"
           table="parameter_vo"
           mutable="false"
           dynamic-update="false"
           dynamic-insert="true"
           select-before-update="false"
           polymorphism="implicit"
           optimistic-lock="none"
          >

        <id name="objectId"
            type="java.lang.Long"
            access="field"
            column="oid"
           >
            <generator class="org.janelia.it.jacs.model.TimebasedIdentifierGenerator" />
        </id>

        <discriminator column="discriminator"
        	           type="java.lang.String"
                       force="false"
                       insert="true"
                       not-null="true"
        />

        <subclass name="org.janelia.it.jacs.model.vo.BooleanParameterVO"
                  discriminator-value="boolean"
                  lazy="false"
                  dynamic-update="false"
                  dynamic-insert="true">
            <property name="booleanValue"
                      type="java.lang.Boolean"
                      access="property"
                      column="boolean_value"
                      not-null="false"
                      generated="never"
                      update="false"
                      insert="true"
                      lazy="false"
                      optimistic-lock="false"
                      unique="false"
                    />
        </subclass>

       <subclass name="org.janelia.it.jacs.model.vo.DoubleParameterVO"
                  discriminator-value="double"
                  lazy="false"
                  dynamic-update="false"
                  dynamic-insert="true">
            <property name="minValue"
                      type="java.lang.Double"
                      access="property"
                      column="double_min_value"
                      not-null="false"
                      generated="never"
                      update="false"
                      insert="true"
                      lazy="false"
                      optimistic-lock="false"
                      unique="false"
                    />
            <property name="maxValue"
                      type="java.lang.Double"
                      access="property"
                      column="double_max_value"
                      not-null="false"
                      generated="never"
                      update="false"
                      insert="true"
                      lazy="false"
                      optimistic-lock="false"
                      unique="false"
                    />
            <property name="actualValue"
                      type="java.lang.Double"
                      access="property"
                      column="double_value"
                      not-null="false"
                      generated="never"
                      update="false"
                      insert="true"
                      lazy="false"
                      optimistic-lock="false"
                      unique="false"
                    />
       </subclass>

        <subclass name="org.janelia.it.jacs.model.vo.LongParameterVO"
                  discriminator-value="long"
                  lazy="false"
                  dynamic-update="false"
                  dynamic-insert="true">
            <property name="minValue"
                      type="java.lang.Long"
                      access="property"
                      column="long_min_value"
                      not-null="false"
                      generated="never"
                      update="false"
                      insert="true"
                      lazy="false"
                      optimistic-lock="false"
                      unique="false"
                    />
            <property name="maxValue"
                      type="java.lang.Long"
                      access="property"
                      column="long_max_value"
                      not-null="false"
                      generated="never"
                      update="false"
                      insert="true"
                      lazy="false"
                      optimistic-lock="false"
                      unique="false"
                    />
            <property name="actualValue"
                      type="java.lang.Long"
                      access="property"
                      column="long_value"
                      not-null="false"
                      generated="never"
                      update="false"
                      insert="true"
                      lazy="false"
                      optimistic-lock="false"
                      unique="false"
                    />
       </subclass>

        <subclass name="org.janelia.it.jacs.model.vo.SingleSelectVO"
                  discriminator-value="single_select"
                  lazy="false"
                  dynamic-update="false"
                  dynamic-insert="true">
            <property name="actualUserChoice"
                      type="java.lang.String"
                      access="property"
                      column="description"
                      not-null="false"
                      generated="never"
                      update="false"
                      insert="true"
                      lazy="false"
                      optimistic-lock="false"
                      unique="false"
                    />
            <list name="potentialChoices"
                  table="single_select_values"
                  mutable="false"
                  cascade="save-update"
                  lazy="false"
                  optimistic-lock="false">
                <key column="value_id"/>
                <index column="position"/>
                <element type="java.lang.String" column="value_element" not-null="true"/>
            </list>
        </subclass>

        <subclass name="org.janelia.it.jacs.model.vo.MultiSelectVO"
                  discriminator-value="multi_select"
                  lazy="false"
                  dynamic-update="false"
                  dynamic-insert="true">
            <list name="actualUserChoices"
                  table="multi_select_choices"
                  mutable="false"
                  cascade="save-update"
                  lazy="false"
                  optimistic-lock="false">
                <key column="choice_id"/>
                <index column="choice_position"/>
                <element type="java.lang.String" column="choice_element" not-null="true"/>
            </list>
            <list name="potentialChoices"
                  table="multi_select_values"
                  mutable="false"
                  cascade="save-update"
                  lazy="false"
                  optimistic-lock="false">
                <key column="value_id"/>
                <index column="value_position"/>
                <element type="java.lang.String" column="value_element" not-null="true"/>
            </list>
        </subclass>

        <subclass name="org.janelia.it.jacs.model.vo.TextParameterVO"
                  discriminator-value="text"
                  lazy="false"
                  dynamic-update="false"
                  dynamic-insert="true">
            <property name="maxLength"
                      type="java.lang.Integer"
                      access="property"
                      column="text_max_length"
                      not-null="false"
                      generated="never"
                      update="false"
                      insert="true"
                      lazy="false"
                      optimistic-lock="false"
                      unique="false"
                    />
            <property name="textValue"
                      type="java.lang.String"
                      access="property"
                      column="text_value"
                      not-null="false"
                      generated="never"
                      update="false"
                      insert="true"
                      lazy="false"
                      optimistic-lock="false"
                      unique="false"
                    />
        </subclass>

    </class>

</hibernate-mapping>