<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.janelia.it.jacs.model.search"
                   default-access="property"
                   default-lazy="false"
                   auto-import="true"
                   default-cascade="none"
                  >
       <class name="SearchHit" lazy="true" table="accession_ts_result">
           <composite-id>
               <key-many-to-one name="searchResultNode" 
                                class="org.janelia.it.jacs.model.user_data.Node"
                                column="node_id"/>
               <key-property name="accession" type="string" column="accession"/>
               <key-property name="documentId" type="java.lang.Long" column="docid"/>
           </composite-id>
           <property name="documentType" type="string" column="doctype" />
           <property name="documentName" type="string" column="docname" />
           <property name="headline" type="string" column="headline" />
       </class>
</hibernate-mapping>
