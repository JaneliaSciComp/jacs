<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping schema="flyportal"
				   package="org.janelia.it.jacs.model.dma"
                   default-access="property"                            
                   auto-import="true">

  <class name="Tag" table="dma_tag">
        <id name="id" column="tag_id">
            <generator class="org.janelia.it.jacs.model.TimebasedIdentifierGenerator" />
        </id>

        <property name="name" type="string"/>
        <property name="description" type="string"/>

        <many-to-one name="classification" class="org.janelia.it.jacs.model.dma.Classification" cascade="all"
                    column="classification_id" />

        <set name="entities" table="dma_tag_entity" lazy="true" inverse="true" cascade="save-update">
            <key column="tag_id"/>
            <many-to-many class="org.janelia.it.jacs.model.genomics.BaseSequenceEntity" column="entity_id"/>
        </set>

        <set name="blastNodes" table="dma_tag_node" lazy="true" inverse="true" cascade="save-update">
            <key column="tag_id"/>
            <many-to-many class="org.janelia.it.jacs.model.user_data.Node" column="node_id"/>
        </set>

  </class>
</hibernate-mapping>
