<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.janelia.it.jacs.model.metadata"
                   default-access="property"
                   default-lazy="false"
                   auto-import="true"
                   default-cascade="all"
                  >

    <class name="CollectionSite" table="collection_site" discriminator-value="0" >

        <id name="siteId" type="java.lang.Long" access="property" column="site_id" >
            <generator class="org.janelia.it.jacs.model.TimebasedIdentifierGenerator" />
        </id>
        <discriminator column="site_type_code" type="java.lang.Integer"/>
        <property name="region" type="java.lang.String" column="region" not-null="true" />
        <property name="location" type="java.lang.String" column="location" />
        <property name="comment" type="java.lang.String" column="comment" />
        <property name="siteDescription" type="java.lang.String" column="site_description" />
        <subclass name="GeoPoint" discriminator-value="1">
           <join table="geo_point">
              <key column="location_id"/>
              <property name="country" type="java.lang.String" column="country" not-null="true" />
              <property name="longitude" type="java.lang.String" column="longitude" not-null="true" />
              <property name="latitude" type="java.lang.String" column="latitude" not-null="true" />
              <property name="altitude" type="java.lang.String" column="altitude" not-null="false" />
              <property name="depth" type="java.lang.String" column="depth" not-null="true" />
            </join>
          </subclass>
          <subclass name="GeoPath" discriminator-value="2">
              <list name="points" table="geo_path_point">
                <key column="path_id"/>
                <index column="path_order"/>
                <many-to-many class="GeoPoint" column="point_id"/>
            </list>
          </subclass>
    </class>

</hibernate-mapping>
