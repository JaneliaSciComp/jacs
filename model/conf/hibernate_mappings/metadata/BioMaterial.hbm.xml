<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.janelia.it.jacs.model.metadata"
                   default-access="property"
                   default-lazy="false"
                   auto-import="true"
                   default-cascade="all"
                  >

    <class name="BioMaterial" table="bio_material" >
        <id name="materialId" type="java.lang.Long" access="property" column="material_id" >
            <generator class="org.janelia.it.jacs.model.TimebasedIdentifierGenerator" />
        </id>
        <property name="project" type="java.lang.String" column="project_symbol" not-null="true"/>
        <property name="materialAcc" type="java.lang.String" column="material_acc" unique="true" not-null="true"/>
        <many-to-one name="collectionSite" class="CollectionSite" column="collection_site_id" not-null="false" lazy="false"/>
        <many-to-one name="collectionHost" class="CollectionHost" column="collection_host_id" not-null="false" lazy="false"/>
        <property name="collectionStartTime" type="timestamp" column="collection_start_time" not-null="true" />
        <property name="collectionStopTime" type="timestamp" column="collection_stop_time" not-null="true" />
        <map name="observations" table="collection_observation" inverse="false" lazy="false" >
            <key column="material_id" />
            <index column="observation_type" type="java.lang.String" />
            <composite-element class="CollectionObservation">
                <property name="value" type="java.lang.String" column="value" />
                <property name="units" type="java.lang.String" column="units" />
                <property name="instrument" type="java.lang.String" column="instrument" />
                <property name="comment" type="java.lang.String" column="comment" />
            </composite-element>
        </map>
        <set name="samples" table="bio_material_sample" lazy="false">
            <key column="material_id"/>
            <many-to-many class="org.janelia.it.jacs.model.metadata.Sample" column="sample_id" />
        </set>
    </class>

</hibernate-mapping>
