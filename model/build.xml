<project name="model" default="build">
    <!-- Import all the generic module targets -->
    <import file="../buildprocess/build-module.xml"/>

    <!-- Set some generic properties.  Doing it in this target gives us access to all  -->
    <!-- props in the generic set-common-properties -->
    <target name="set-common-properties" depends="build-module-init.set-common-properties">
        <property name="jar.name" value="jacs-model.jar"/>

        <!-- Add additional jars (i.e. not found in ${lib.dir}) that we require for compiling src -->
        <path id="compile.classpath.additional">
            <fileset dir="${basedir}/../common/GWT-Serializable/" includes="**/*.jar"/>
            <fileset dir="${common.dir}/Spring" includes="hibernate3.jar"/>
            <fileset dir="${common.dir}/Spring" includes="log4j-1.2.14.jar"/>
        </path>

        <path id="test.run.classpath.additional"> <!-- Add additional jars needed to run tests -->
            <fileset dir="${gwt.home}" includes="**/*.jar"/>
            <fileset dir="${common.dir}/Spring" includes="hibernate3.jar"/>
        </path>
    </target>

    <!-- Add the source code to the jar (for GWT). Note that the generic jar target is called first -->
    <target name="jar" depends="compile, make-jars-dir">
        <jar destfile="${build.jars.dir}/${jar.name}" update="true">
            <fileset dir="${basedir}/../model/conf/hibernate_mappings">
                <include name="**/*.hbm.xml"/>
            </fileset>
            <fileset dir="${basedir}/../model/build/classes">
                <include name="**/*.class"/>
                <include name="**/Model.gwt.xml"/>
            </fileset>
            <!-- Java source files needed for GWT compilation -->
            <fileset dir="${basedir}/../model/src">
                <include name="**/*.java"/>
            </fileset>
        </jar>
    </target>
    <!-- Define the set of targets that should be run to completely build this module. -->
    <target name="build" depends="jar"/>

</project>
